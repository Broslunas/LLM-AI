---
import ChatBox from '@/components/ChatBox.jsx';
import MainLayout from '@/layouts/MainLayout.astro';

export const prerender = false;
---
<MainLayout title="Inicio" description="Bienvenido a Broslunas Chat, tu espacio para interactuar con inteligencia artificial." image="https://cdn.broslunas.com/favicon.png">
  <ChatBox client:load />
  <style>
    body {
      background-color: #1a1a1a;
      color: #f0f0f0;
      margin: 0;
      font-family: "Minecraft Title", sans-serif;
      line-height: 1.6;
      overflow-x: hidden; /* Prevent horizontal scrolling */
    }
    MainLayout {
      padding: 5px 0; /* Further reduce vertical padding */
    }
    ChatBox {
      opacity: 0;
      transform: translateY(20px);
      animation: fadeIn 0.8s ease-out forwards;
    }
    @keyframes fadeIn {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</MainLayout>