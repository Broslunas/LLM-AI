---
import ChatBox from '../components/ChatBox.jsx';
import MainLayout from '../layouts/MainLayout.astro';

export const prerender = false; // Disable prerendering
---
<MainLayout>
  <h1>Broslunas Chat</h1>
  <ChatBox client:load />
  <style>
      body {
        background-color: #1a1a1a; /* Gris muy oscuro */
        color: #f0f0f0; /* Gris claro para mejor legibilidad */
        margin: 0;
        font-family: Arial, sans-serif;
        line-height: 1.6;
      }
      h1 {
        text-align: center;
        margin: 20px 0;
        color: #ffffff; /* Blanco para destacar */
        font-size: 2.5rem;
      }
      h2 {
        text-align: center;
        margin-top: 10px;
        color: #cccccc; /* Gris claro */
      }
      p, textarea, button {
        color: #f0f0f0; /* Gris claro */
      }
      textarea {
        background-color: #333333; /* Fondo gris oscuro */
        border: 1px solid #555555; /* Borde gris */
        color: #f0f0f0; /* Texto gris claro */
        padding: 10px;
        width: 100%;
        border-radius: 5px;
        margin-bottom: 10px;
      }
      button {
        background-color: #555555; /* Gris medio */
        border: none;
        color: #ffffff; /* Texto blanco */
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
      }
      button:disabled {
        background-color: #777777; /* Gris más claro para deshabilitado */
        cursor: not-allowed;
      }
      button:hover:not(:disabled) {
        background-color: #666666; /* Gris más oscuro al pasar el mouse */
      }
      /* Estilos para la barra de scroll */
      ::-webkit-scrollbar {
        width: 8px;
      }
      ::-webkit-scrollbar-track {
        background: #2a2a2a;
      }
      ::-webkit-scrollbar-thumb {
        background-color: #e67e22;
        border-radius: 4px;
      }
      ::-webkit-scrollbar-thumb:hover {
        background-color: #d35400;
      }
      header {
        background-color: #333333; /* Fondo gris oscuro */
        padding: 10px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      nav a {
        color: #f0f0f0; /* Gris claro */
        text-decoration: none;
        margin: 0 10px;
        font-size: 1rem;
      }
      nav a:hover {
        color: #e67e22; /* Naranja */
      }
    </style>
</MainLayout>